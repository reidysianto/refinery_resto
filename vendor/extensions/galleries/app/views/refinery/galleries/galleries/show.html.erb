<div class="container">
  <div class='row'>
    <div class="col-md-5 ">
      <h3>Food Name</h3>
        <p><%=raw @gallery.name %></p>
      <h3>Information</h3>
        <p><%= Faker::Lorem.paragraph(20)%></p>
    </div>
    <div class="col-md-5">
      <h3>Image</h3>
      <p>
        <%= image_tag @gallery.image.url(), class: 'img-responsive img-thumbnail img-medium'%>
      </p>
    </div>
  </div>
  <hr></hr>
  <div class="row">
    <h3>Other Food</h3>
    <ul class="list-inline">
      <% @galleries.each do |gallery| %>
        <% unless gallery == @gallery then%>
          <li>
            <%= link_to refinery.galleries_gallery_path(gallery),class: "nav" do%>
              <%=image_tag gallery.image.url(),class: 'img-thumb img-thumbnail'%>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
<% content_for :body do %><% end %>
<% content_for :side_body do %><% end %>

